#
# The default server
#
server {
    listen       80 default_server;
    root         {{ DOCUMENT_ROOT }};
    server_name  {{ HOSTNAME }};
    index        index.php index.html index.htm;
    charset      utf-8;
    client_max_body_size   100M;

{% if ssl_admin %}
    listen 443 ssl;
    ssl_certificate       /etc/pki/tls/{{ HOSTNAME }}/{{ HOSTNAME }}.cert;
    ssl_certificate_key   /etc/pki/tls/{{ HOSTNAME }}/{{ HOSTNAME }}.key;
{% endif %}

    access_log  /var/log/nginx/{{ HOSTNAME }}.access.log main;
    error_log   /var/log/nginx/{{ HOSTNAME }}.error.log;

    location / {
        try_files $uri $uri/ {{ wp_site_path }}/index.php?$args;
    }

    rewrite {{ wp_dir }}/wp-admin$ $scheme://$host$uri/ permanent;

    rewrite /files/$ /index.php last;
    if ($uri !~ wp-content/plugins) {
        rewrite /files/(.+)$ /wp-includes/ms-files.php?file=$1 last;
    }
    # Rewrite multisite '.../wp-.*' and '.../*.php'.
    if (!-e $request_filename) {
        #rewrite ^/[_0-9a-zA-Z-]+(/wp-.*) $1 last;
        rewrite ^{{ wp_dir }}/[_0-9a-zA-Z-]+.*(/wp-admin/)$ $1index.php last;
        rewrite ^{{ wp_dir }}/[_0-9a-zA-Z-]+.*(/wp-admin/.*\.php)$ $1 last;
        rewrite ^/[_0-9a-zA-Z-]+(/.*\.php)$ $1 last;
    }

    error_page  404    /404.html;
    location = /404.html {
        root   /usr/share/nginx/html;
    }

    # redirect server error pages to the static page /50x.html
    #
    error_page  500 502 503 504    /50x.html;
    location = /50x.html {
        root   /usr/share/nginx/html;
    }

{% if ssl_admin %}
    location ~ /wp-(admin.*\.php|login\.php)$ {
{% if fastcgi == "php-fpm" %}
        fastcgi_pass    unix:/var/run/php-fpm/php-fcgi.pid;
{% elif fastcgi == "hhvm" %}
        #fastcgi_pass   unix:/var/run/hhvm/hhvm.pid;
        fastcgi_pass    127.0.0.1:9000;
{% endif %}
        fastcgi_index   index.php;
        fastcgi_param   SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        include         fastcgi_params;
        fastcgi_param HTTPS on;
    }
{% endif %}

    location ~ \.php$ {
        #root           {{ DOCUMENT_ROOT }};
{% if fastcgi == "php-fpm" %}
        fastcgi_pass    unix:/var/run/php-fpm/php-fcgi.pid;
{% elif fastcgi == "hhvm" %}
        #fastcgi_pass   unix:/var/run/hhvm/hhvm.pid;
        fastcgi_pass    127.0.0.1:9000;
{% endif %}
        fastcgi_index   index.php;
        fastcgi_param   SCRIPT_FILENAME $document_root$fastcgi_script_name;
        include         fastcgi_params;
    }

    location = /robots.txt { access_log off; log_not_found off; }
    location ~ /\. { deny  all; access_log off; log_not_found off; }
}
